{
	"require": {
		"knplabs/github-api": "~1.4",
        "php":                  "~5.3",
        "kriswallsmith/buzz":   "~0.13",
        "jacobkiers/oauth":     "~1.0.10",
		"google/apiclient": "1.0.*@beta"
    },
    "require-dev": {
		"phpunit/phpunit": "4.0.*",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "conflict": {
        "eabay/bitbucket-repo-sync": "*"
    },
    "suggest": {
        "ext-curl": "*"
    },
    "autoload": {
        "psr-0": { 
				"Bitbucket\\": "lib/",
				"Buzz": "lib/" 
		},
		"classmap": [
            "src/"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
	"extra": {
        "branch-alias": {
            "dev-master": "1.1.x-dev"
        }
    }
}
